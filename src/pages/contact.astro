---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="Contact | Portfolio" description="Contact me.">
    <div
        class="min-h-screen flex items-center justify-center p-6 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-neutral-900 via-neutral-950 to-neutral-950"
    >
        <div class="max-w-xl w-full relative">
            <div
                class="absolute -top-20 left-0 w-full h-px bg-gradient-to-r from-transparent via-neutral-800 to-transparent"
            >
            </div>

            <header class="mb-12">
                <p
                    class="font-mono text-xs text-yellow-400 mb-2 uppercase tracking-widest"
                >
                    + ESTABLISH_COMM
                </p>
                <h1
                    class="text-4xl md:text-5xl font-black mb-4 tracking-tighter text-white"
                >
                    SendMessage
                </h1>
            </header>

            <form class="space-y-8 relative z-10">
                <div class="group">
                    <label
                        class="block font-mono text-[10px] text-neutral-500 mb-2 uppercase tracking-widest group-focus-within:text-yellow-400 transition-colors"
                        >Identity verify (Email)</label
                    >
                    <input
                        type="email"
                        class="w-full bg-neutral-900/50 border-b border-neutral-800 p-4 text-white focus:outline-none focus:border-yellow-400 focus:bg-neutral-900 transition-all font-mono placeholder:text-neutral-700"
                        placeholder="user@example.com"
                    />
                </div>

                <div class="group">
                    <label
                        class="block font-mono text-[10px] text-neutral-500 mb-2 uppercase tracking-widest group-focus-within:text-yellow-400 transition-colors"
                        >Message Payload</label
                    >
                    <textarea
                        rows="6"
                        class="w-full bg-neutral-900/50 border-b border-neutral-800 p-4 text-white focus:outline-none focus:border-yellow-400 focus:bg-neutral-900 transition-all font-mono placeholder:text-neutral-700"
                        placeholder="Enter transmission..."></textarea>
                </div>

                <button
                    type="button"
                    class="group w-full bg-neutral-800 hover:bg-yellow-400 text-neutral-400 hover:text-black font-bold py-5 transition-all duration-300 uppercase tracking-[0.2em] text-xs relative overflow-hidden border border-neutral-700 hover:border-yellow-400"
                >
                    <span
                        class="relative z-10 group-hover:scale-105 inline-block transition-transform"
                        >Transmit Signal</span
                    >
                    <div
                        class="absolute inset-0 bg-yellow-400 translate-y-full group-hover:translate-y-0 transition-transform duration-300 ease-out"
                    >
                    </div>
                </button>
            </form>

            <p
                class="mt-12 text-center text-neutral-700 text-[10px] font-mono tracking-widest uppercase"
            >
                SECURE CHANNEL: ENCRYPTED // END-TO-END
            </p>
        </div>
    </div>
</BaseLayout>
